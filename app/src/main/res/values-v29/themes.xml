<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="AppTheme.Light" parent="AppTheme">
    <item name="themeColorPrimary">@color/colorPrimary</item>
    <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="themeColorAccent">@color/colorAccent</item>
    <item name="themePrimaryTextColor">@android:color/primary_text_light</item>
    <item name="themeSecondaryTextColor">@color/secondary_text_color_light</item>
    <item name="themeBackgroundColor">@color/md_white_1000</item>
    <item name="themeColorViews">@color/md_black_1000</item>
    <item name="themeToolbarColor">@color/accent</item>
    <item name="themeToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="themeColorDivider">@color/md_light_dividers</item>
    <item name="colorControlNormal">@color/md_white_1000</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowContentTransitions">true</item>
    <item name="bottomSheetStyle">@style/AppModalStyle</item>
    <item name="android:colorBackground">@color/md_dark_background</item>
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="themeColorPrimary">@color/colorPrimary</item>
    <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="themeColorAccent">@color/colorAccent</item>
    <item name="themePrimaryTextColor">@color/primary_text_color_dark</item>
    <item name="themeSecondaryTextColor">@color/secondary_text_color_dark</item>
    <item name="themeBackgroundColor">@color/md_dark_background</item>
    <item name="themeColorViews">@color/md_white_1000</item>
    <item name="themeToolbarColor">@color/accent</item>
    <item name="themeToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="themeColorDivider">@color/md_dark_dividers</item>
    <item name="colorControlNormal">@color/md_white_1000</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>
</resources>