<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_grey_300</item>
        <item name="android:navigationBarColor">@color/colorAccentDark</item>
    </style>


    <style name="AppTheme.Light" parent="AppTheme">
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themePrimaryTextColor">@android:color/primary_text_light</item>
        <item name="themeSecondaryTextColor">@color/secondary_text_color_light</item>
        <item name="themeBackgroundColor">@color/md_white_1000</item>
        <item name="themeColorViews">@color/md_black_1000</item>
        <item name="themeToolbarColor">@color/accent</item>
        <item name="themeToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:statusBarColor">@color/colorAccentDark</item>
        <item name="themeColorDivider">@color/md_light_dividers</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_white_1000</item>
        <item name="colorControlHighlight">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccentDark</item>
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themePrimaryTextColor">@android:color/primary_text_dark</item>
        <item name="themeSecondaryTextColor">@color/secondary_text_color_dark</item>
        <item name="themeBackgroundColor">@color/md_dark_background</item>
        <item name="themeColorViews">@color/md_white_1000</item>
        <item name="themeToolbarColor">@color/accent</item>
        <item name="android:statusBarColor">@color/colorAccentDark</item>
        <item name="themeToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="themeColorDivider">@color/md_dark_dividers</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_white_1000</item>
        <item name="colorControlHighlight">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.Settings.Light" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.Settings.Dark" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.NoteDetail.Light" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.NoteDetail.Dark" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.SubjectDetail.Light" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_white_1000</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.SubjectDetail.Dark" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_dark_background</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
    </style>


    <style name="ExtendedFAB" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:elevation">6dp</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">32dp</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Design.Light.BottomSheetDialog.App" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="MonthView_MiniDayLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_other_month_day_number</item>
    </style>

    <style name="MonthView_MiniMonthLabel">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_mini_day_number</item>
    </style>


</resources>
