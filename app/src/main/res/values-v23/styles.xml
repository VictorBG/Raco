<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_white_1000</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themePrimaryTextColor">@android:color/primary_text_light</item>
        <item name="themeSecondaryTextColor">@color/secondary_text_color_light</item>
        <item name="themeBackgroundColor">@color/md_white_1000</item>
        <item name="themeColorViews">@color/md_black_1000</item>
        <item name="themeToolbarColor">@color/accent</item>
        <item name="themeToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:statusBarColor">@color/md_light_statusbar</item>
        <item name="themeColorDivider">@color/md_light_dividers</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.SubjectDetail.Light" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_light_statusbar</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.SubjectDetail.Dark" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/md_dark_statusbar</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>